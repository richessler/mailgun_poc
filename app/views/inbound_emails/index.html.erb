<p id="notice"><%= notice %></p>

<h1>Listing Inbound Emails</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Attachments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inbound_emails.each do |inbound_email| %>
      <tr>
        <td><%= inbound_email.sender %></td>
        <td><%= inbound_email.recipient %></td>
        <td><%= inbound_email.subject %></td>
        <td><%= inbound_email.body %></td>
        <td><%= inbound_email.attachments %></td>
        <td><%= link_to 'Show', inbound_email %></td>
        <td><%= link_to 'Edit', edit_inbound_email_path(inbound_email) %></td>
        <td><%= link_to 'Destroy', inbound_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

